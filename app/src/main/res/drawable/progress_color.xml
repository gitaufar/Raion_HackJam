<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Warna background kosong -->
        </shape>
    </item>

    <!-- Green layer (0-20%) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#4CAF50" /> <!-- Hijau -->
            </shape>
        </clip>
    </item>

    <!-- Yellow layer (20-50%) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FFEB3B" /> <!-- Kuning -->
            </shape>
        </clip>
    </item>

    <!-- Red layer (50-100%) -->
    <item android:id="@+id/red_progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#F44336" /> <!-- Merah -->
            </shape>
        </clip>
    </item>

</layer-list>