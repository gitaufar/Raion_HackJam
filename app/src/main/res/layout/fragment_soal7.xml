<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_soal.SoalFragment7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="324.61dp"
        android:layout_height="222.32dp"
        android:layout_gravity="center"
        android:background="@drawable/question_bg">

        <TextView
            android:id="@+id/text_place"
            android:layout_width="278.61dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_place"
            android:text="@string/soal7"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/pjs_bold"/>

        <FrameLayout
            android:id="@+id/button_place"
            android:layout_width="280dp"
            android:layout_height="100dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_place">

            <FrameLayout
                android:layout_gravity="center_vertical"
                android:elevation="5dp"
                android:id="@+id/tidak"
                android:background="@drawable/emoji_bg"
                android:layout_width="80dp"
                android:layout_height="78dp"
                android:layout_marginStart="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_tidak"/>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/text_tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pjs_bold"
                    android:text="@string/tidak"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>


            </FrameLayout>

            <FrameLayout
                android:elevation="5dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:id="@+id/mungkin"
                android:background="@drawable/emoji_bg"
                android:layout_width="80dp"
                android:layout_height="78dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_mungkin"/>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/text_mungkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pjs_bold"
                    android:text="@string/mungkin"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>


            </FrameLayout>

            <FrameLayout
                android:elevation="5dp"
                android:layout_gravity="end|center_vertical"
                android:id="@+id/iya"
                android:background="@drawable/emoji_bg"
                android:layout_width="80dp"
                android:layout_height="78dp"
                android:layout_marginEnd="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_iya"/>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/text_iya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pjs_bold"
                    android:text="@string/iya"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>


            </FrameLayout>


        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>